<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_transparent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="373dp"
        android:layout_height="101dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rummikub_tr" />


    <Button
        android:id="@+id/btn_configure_players"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:elevation="24dp"

        android:onClick="onButtonClick"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/players"

        android:textAppearance="@style/MyMenuTextAppearance"

        app:layout_constraintEnd_toEndOf="@+id/iv_logo"
        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

    <Button
        android:id="@+id/btn_configure_games"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="24dp"
        android:onClick="onButtonClick"

        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/games"
        android:textAppearance="@style/MyMenuTextAppearance"

        app:layout_constraintEnd_toEndOf="@+id/iv_logo"

        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/btn_configure_players" />

    <Button
        android:id="@+id/btn_config"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="24dp"
        android:onClick="onButtonClick"

        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/settings"
        android:textAppearance="@style/MyMenuTextAppearance"

        app:layout_constraintEnd_toEndOf="@+id/iv_logo"

        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/btn_configure_games" />


</android.support.constraint.ConstraintLayout>